      </div>
   </section>
   <section id="book">
      <Grunge grunge="btm" id="home" />

      <div class="book-container">
         <div class="title">
            <!-- <img src="/images/home/calendar.png" alt="" /> -->
            <div class="section-title">
               <h2>Book Now</h2>
               <h2>Lorem ipsum dolor sit</h2>
            </div>
         </div>
         <button class="btn invert">
            <span>Check the dates</span>
         </button>
      </div>
      <p class="elem">elem</p>
   </section>

   <script src="/src/scripts/videoPlayer.js"></script>
</Main>
