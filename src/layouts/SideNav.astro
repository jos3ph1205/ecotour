---
const { active } = Astro.props;
---

<div class="sidenav">
   <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/destinations/">Destinations</a></li>
      <details>
         <summary>Tours</summary>

         <ul>
            <li><a href="/tours-list">Tours List</a></li>
            <li><a href="/single-tours">Single Tours</a></li>
            <li><a href="/private-tours">Private Tours</a></li>
         </ul>

      </details>
   </ul>
</div>
<style is:global>
   .sidenav {
      visibility: hidden;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      position: fixed;
      z-index: 10;
      top: 0;
      left: -100%;
      font-size: 1.125em;
      width: min(80svw,400px);
      height: 100svh;
      color: var(--clr-f-700) !important;
      backdrop-filter: blur(10px);
      background-color: color-mix(in srgb, var(--clr-base-lt), transparent 10%);
      box-shadow: 0px 0px 50px 0px rgba(0, 0, 0, 0.1);
      transition: .6s cubic-bezier(.2,.5,0,1);
      transition-behavior: allow-discrete;

      ul {
         list-style: none;
      }
      li {

         border-top: solid 1px hsla(0, 0%, 85%);

         &:last-child {
            border-bottom: solid 1px hsla(0, 0%, 85%);
         }
      }

      a {
         display: block;
         padding: 0.8em 1.2em;
         text-decoration: none;
         color: var(--clr-f-700) !important;
      }

      details {
         cursor: pointer;
         border-top: solid 1px hsla(0, 0%, 85%);
         border-bottom: solid 1px hsla(0, 0%, 85%);
         overflow: hidden;

         summary {
            padding: 0.8em 1.2em;
         }


         summary {
            position: relative;

            &::marker {
               content: '';
               display: none;
            }

            &::before {
               content: "‚ùØ";
               position: absolute;
               right: 0;
               top: 0;
               font-size: 1.125em;
               text-align: center;
               padding-top: 0.875rem;
               height: 100%;
               aspect-ratio: 1 / 1;
               transition: rotate .2s ease-out;
               color: var(--clr-f-500);
            }

            &::after {
               content: "";
               position: absolute;
               right: 0;
               top: 0;
               height: 100%;
               aspect-ratio: 1 / 1;
               border-left: solid 1px hsla(0, 0%, 85%);
            }
         }


         &[open] {
            border-bottom: none;

            li:first-child {
               border-top: solid 1px hsla(0, 0%, 85%);
            }

            summary {
                  &::before {
                     rotate: 90deg;
                  }
               }
            }
         }


      details::details-content {
         block-size: 0;
         transition-property: block-size, content-visibility;
         transition-duration: 0.5s;
         transition-behavior: allow-discrete;
      }
      details[open]::details-content {
         block-size: auto;
	      block-size: calc-size(auto, size);
      }
   }

   @media only screen and (max-width: 768px) {
      .sidenav.show {
         visibility: visible;
         left: 0;
      }
   }
</style>
